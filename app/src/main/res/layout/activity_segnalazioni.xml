<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/invio_segnalazioni"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="basket.amatoripescara.it.amatoripescara.segnalazioni">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In questa sezione puoi inviare segnalazioni/suggerimenti per l'app e per sito Amatori Pescara Basket."
        android:id="@+id/intro_segnalazioni"
        android:lineSpacingExtra="5dp"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/invia_segnalazione_button"
        android:text="Invia segnalazione"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/intro_segnalazioni"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:background="#e52b05"
        android:paddingRight="5dp"
        android:paddingLeft="5dp" />
</RelativeLayout>
